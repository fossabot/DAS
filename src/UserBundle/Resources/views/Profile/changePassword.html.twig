{% extends ":templates:box-with-footer.html.twig" %}

{% block title %}{{ "user.profile.change_password.title" | trans }}{% endblock %}
{% block box_title %}{{ "user.profile.change_password.title" | trans }}{% endblock %}

{% block box_form_start %}
    {{ form_start(form, { 'action': path('user_profile_change_password'), 'attr': { 'class': 'user_profile_change_password' } }) }}
{% endblock %}

{% block box_body_content %}
    {{ form_widget(form) }}
{% endblock %}

{% block box_footer %}
    <input type="submit" class="btn btn-info pull-right" value="{{ 'user.profile.change_password.submit'|trans }}"/>
{% endblock %}

{% block box_form_end %}
    {{ form_end(form) }}
{% endblock %}
