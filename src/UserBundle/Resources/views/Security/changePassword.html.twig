{% extends ":templates:box-with-footer.html.twig" %}

{% block title %}
    {{ "layout.change_password" | trans }}
{% endblock %}

{% block box_body_header %}
    {{ form_start(form, { 'action': path('user_security_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
{% endblock %}

{% block box_title %}
    {{ "layout.change_password" | trans }}
{% endblock %}


{% block box_start %}
    {{ form_widget(form) }}
{% endblock %}

