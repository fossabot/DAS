{% extends ":templates:login.html.twig" %}


{% block title %}
    {{ "user.login.student.title" | trans }}
{% endblock %}



{% block box_body %}
    <form action="{{ path("student_security_login") }}" class="form-horizontal" method="post">

        <p class="login-box-msg">
            <strong>{{ "user.login.student.title" | trans }}</strong>
        </p>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <div class="form-group">
            <label class="sr-only" for="username">
                {{ 'user.login.username' | trans }}
            </label>

            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-user"></i>
                </div>

                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
                       placeholder="{{ 'user.login.username' | trans }}" required="required"/>
            </div>

        </div>
        <div class="form-group">
            <label class="sr-only" for="barcode">
                {{ 'user.login.barcode' | trans }}
            </label>

            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-qrcode"></i>
                </div>
                <input type="text" class="form-control" id="barcode" name="_barcode" value="" required="required"
                       placeholder="{{ 'user.login.barcode' | trans }}"/>
            </div>

        </div>

        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'user.login.remember_me' | trans }}</label>
        </div>

        <div class="form-group">
            <div class="col-xs-6">
                <a href="{{ path('user_security_request_card') }}" class="btn btn-default">
                    {{ 'user.profile.lost_card' | trans }}
                </a>
            </div>

            <div class="col-xs-6">
                <input type="submit" class="btn btn-info pull-right" id="_submit" name="_submit"
                       value="{{ 'user.login.submit' | trans }}"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-4 col-xs-8">
                <a href="{{ path('user_security_login') }}" id="_i_am_not_a_student" class="pull-right">
                    {{ 'user.iam_not_a_student' | trans }}
                </a>
            </div>
        </div>
    </form>
{% endblock %}
