{% extends ":templates:box-with-footer.html.twig" %}

{% block title %}{{ 'user.user.edit.title' | trans }}{% endblock %}
{% block box_title %}{{ 'user.user.edit.title' | trans }}{% endblock %}

{% block box_action %}
    {{ action.back('user.user.back_to_list' | trans, 'user_user_index') }}
    {% if delete_form is defined %}
        {{ action.delete('user.user.delete' | trans, delete_form) }}
    {% endif %}
{% endblock %}

{% block box_form_start %} {{ form_start(form) }}{% endblock %}

{% block box_body_content %}
    {{ form_widget(form) }}
{% endblock %}

{% block box_footer %}
    {{ action.save('user.users.edit' | trans) }}
{% endblock %}
{% block box_form_end %}
    {{ form_end(form) }}
{% endblock %}
