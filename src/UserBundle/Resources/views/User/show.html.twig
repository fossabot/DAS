{% extends ":templates:box-with-footer.html.twig" %}

{% block title %}
    {{ "user.user.show.title" | trans }}
{% endblock %}

{% block box_title %}
    {{ "user.user.show.title" | trans }}
{% endblock %}

{% block box_actions %}
    {{ action.back('user.user.back_to_list' | trans, 'user_user_index') }}
    {{ action.edit('user.user.edit' | trans, 'user_user_edit', user.id) }}
    {{ action.delete('user.user.delete' | trans, delete_form) }}
{% endblock %}

{% block box_body_content %}
    <div class="row">
        <div class="col-md-4 profile-picture">
            <div class="picture">
                {{ profile_picture(user) }}
            </div>
        </div>


        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>{{ 'user.last_name' | trans }}</dt>
                <dd>{{ user.lastName }}</dd>

                <dt>{{ 'user.first_name' | trans }}</dt>
                <dd>{{ user.firstName }}</dd>

                <dt>{{ 'user.username' | trans }}</dt>
                <dd>{{ user.username }}</dd>

                <dt>{{ 'user.email' | trans }}</dt>
                <dd>{{ user.email }}</dd>

                <dt>{{ 'user.phone' | trans }}</dt>
                <dd>{{ user.phone }}</dd>

                <dt>{{ 'user.role' | trans }}</dt>
                <dd>{{ user.roles | pretty_role }}</dd>
            </dl>
        </div>
    </div>
{% endblock %}
