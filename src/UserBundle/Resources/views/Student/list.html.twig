{% extends "::base.html.twig" %}


{% block body %}


    <div class="box">
        <div class="box-header">
            <div class="box-actions pull-right">
                <a href="{{ path('student_management_new') }}" id="_add" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>
                    {{ "layout.student.add" | trans }}
                </a>
                <a href="{{ path('student_management_import') }}" id="_import" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>
                    {{ "layout.student.import" | trans }}
                </a>
            </div>
            <h1 class="box-title">
                {{ "layout.student.list" | trans }}
            </h1>
        </div>
        <div class="box-body">
            {{ datatable_render_html(datatable) }}
        </div>
    </div>


{% endblock body %}

{% block javascripts %}
    <script>
        $ = jQuery;
    </script>
    {{ datatable_render_js(datatable) }}
{% endblock %}
