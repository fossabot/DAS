{% extends ':templates:box.html.twig' %}

{% block title %}{{ "course.grade.show.title" | trans }}{% endblock %}
{% block box_title %}{{ "course.grade.show.title" | trans }}{% endblock %}

{% block box_actions %}
    {{ action.back('course.grade.back_to_list' | trans, 'course_grade_index') }}
    {{ action.edit('course.grade.edit' | trans, 'course_grade_edit', grade.id) }}
    {{ action.delete('course.grade.delete' | trans, delete_form) }}
{% endblock %}

{% block box_body_content %}
    <table>
        <tbody>
        <tr>
            <th>{{ 'course.grade.id' | trans }}</th>
            <td>{{ grade.id }}</td>
        </tr>
        <tr>
            <th>{{ 'course.grade.grade' | trans }}</th>
            <td>{{ grade.grade }}</td>
        </tr>

        </tbody>
    </table>
{% endblock %}
