{% extends ':templates:box.html.twig' %}


{% block title %}{{ "course.lesson.show.title" | trans }}{% endblock %}
{% block box_title %}{{ "course.lesson.show.title" | trans }}{% endblock %}

{% block box_actions %}
    {{ action.back('course.lesson.back_to_list' | trans, 'course_lesson_index') }}
    {{ action.edit('course.lesson.edit', 'course_lesson_edit', lesson.id) }}
    {{ action.delete('course.lesson.delete', delete_form) }}
{% endblock %}

{% block box_body_content %}
    <table>
        <tbody>
        <tr>
            <th>{{ 'course.lesson.id' | trans }}</th>
            <td>{{ lesson.id }}</td>
        </tr>
        <tr>
            <th>{{ 'course.lesson.date' | trans }}</th>
            <td>{% if lesson.date %}{{ lesson.date|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'course.lesson.room' | trans }}</th>
            <td>{{ lesson.room }}</td>
        </tr>
        <tr>
            <th>{{ 'course.lesson.remarks' | trans }}</th>
            <td>{{ lesson.remarks }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}

