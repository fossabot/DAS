{% extends 'base.html.twig' %}

{% block body %}
    <h1>CourseContent</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ courseContent.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ courseContent.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if courseContent.createdAt %}{{ courseContent.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if courseContent.updatedAt %}{{ courseContent.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_content_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('course_content_edit', { 'id': courseContent.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
